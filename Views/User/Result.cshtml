
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Congratulation Page</title>
    <link rel="stylesheet" href="~/css/congratulation.CSS">
    <link rel="stylesheet" href="~/css/About.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
</head>

<body>
    <div class="nav">
        <a href="#home">
            <img class="logoimg"
                 src="~/Frontend/assets/Quizzylogo.svg"
                 alt="logo" />
        </a>
        <div class="list-of-options">
            <a class="list-item" style="text-decoration: none" href="/User/Homepage">Home</a>
            <a class="list-item" style="text-decoration: none" href="/User/About">About</a>
            <a class="list-item" style="text-decoration: none" href="/User/Contact">Contact</a>
            <a class="list-item" style="text-decoration: none" href="/User/SelectQuiz">Quizzes</a>
        </div>
        <a asp-action="UserDetail">
            <img class="profileimg"
                 src="~/Frontend/assets/profile-img.svg"
                 alt="profile" />
        </a>
    </div>
    @{
        if (ViewBag.score > 50)
        {
            <div class="box2">
                <h1 style="color:#5863F8; font-size: 50px">Congratulations!</h1>
                <div class="message">
                    You have completed the quiz. See how your knowledge stacks<br />
                    up and discover areas for growth in your results below.
                </div>
            </div>
            <div class="celebration">
                <img class="celeb" src="~/css/celebration.png" alt="">
            </div>
        }
        else
        {
            <div class="box2">
                <h1 style="color:indianred; font-size: 50px">Need to Work!</h1>
        <div class="message">
            You have completed the quiz. See how your knowledge stacks<br />
            up and discover areas for growth in your results below.
        </div>
      
    </div>
            <div class="celebration">
                <img class="celeb" src="~/css/lesscore.png" alt="">
            </div>
        }
    }
    
    <div class="message2">
        <p>You have secured</p>
    </div>
    <div class="score">
        <h1 style="color:#5863F8">@ViewBag.score %</h1>
    </div>
    <div class="buttons">
        <input onclick="location.href='@Url.Action("Homepage", "User")'" type="button" class="Home" value="Go to Home &#8594; ">
        <a href=@($"/User/ShowAnswer/{ViewBag.ExamId}")> <input type="button" class="Page" value="See Your responses &#8594;"></a>
    </div>


    </div>
</body>

</html>